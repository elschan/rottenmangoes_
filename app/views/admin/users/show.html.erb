<h1>User Details</h1>
<h2>User ID: <%= @user.id %> -- <%= @user.email %></h2>
<p>Full Name: <%= @user.full_name %></p>
<h3>Reviews</h3>
<% @user.reviews.each do |review| %>
  <h4><%= review.movie.title %></h4>
  <ul>
    <li>Rating: <%= review.rating_out_of_ten %>/10</li>
    <li>Character Count: <%= review.text.length %></li>
    <li>Creation Date: <%= formatted_date(review.created_at) %></li>
  </ul>
<% end %>
<%= link_to "Back to Admin User Index", admin_users_path %>
<hr>